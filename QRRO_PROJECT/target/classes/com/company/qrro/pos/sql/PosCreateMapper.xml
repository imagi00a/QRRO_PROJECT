<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.qrro.pos.sql.PosCreateMapper">

	<insert id="create" parameterType="map" useGeneratedKeys="true" keyProperty="seq">
		insert into store_info
		(
			store_id
			,store_pw
			,store_no
			,store_name
			,address
			,owner
			,store_tel
		) values (
			#{store_id}
			,#{store_pw}
			,#{store_no}
			,#{store_name}
			,#{address}
			,#{owner}
			,#{store_tel}
		)
	</insert>
	
	<select id="checkAdId" resultType="int">
        SELECT COUNT(*) FROM store_info WHERE seq = 1
    </select>
	
</mapper>